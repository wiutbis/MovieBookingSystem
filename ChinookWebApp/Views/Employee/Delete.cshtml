@model ChinookWebApp.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>
<h3>Are you sure you want to delete this employee?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Employee ID</dt>
        <dd class="col-sm-10">@Model.EmployeeId</dd>

        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Reports To</dt>
        <dd class="col-sm-10">@Model.ReportsTo</dd>

        <dt class="col-sm-2">Birth Date</dt>
        <dd class="col-sm-10">@Model.BirthDate?.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EmployeeId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
